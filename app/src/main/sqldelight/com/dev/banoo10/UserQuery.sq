CREATE TABLE userTable (
    accessToken TEXT NOT NULL ,
    address TEXT,
    age INTEGER AS Int,
    createdAt TEXT,
    gender TEXT,
    id TEXT PRIMARY KEY,
    name TEXT,
    phone TEXT,
    pond_depth REAL AS Float,
    pond_length REAL AS Float,
    pond_shape TEXT,
    pond_width REAL AS Float,
    species TEXT,
    updatedAt TEXT
);

CREATE TABLE feedCalcs(
    id TEXT PRIMARY KEY,
    feedCalc_name TEXT,
    startAt TEXT,
    berat_tebar REAL AS Float,
    dosis REAL AS Float,
    species TEXT,
    createdAt TEXT,
    updatedAt TEXT
);

CREATE TABLE feedCalcSched(
    id INTEGER AS Int PRIMARY KEY,
    day INTEGER AS Int,
    pakan_harian REAL AS Float,
    penyerapan REAL AS Float,
    berat_akhir REAL AS Float,
    feedCalcId TEXT
);



addFeedCalc:
INSERT OR REPLACE INTO feedCalcs(
    id,
    feedCalc_name,
    startAt,
    berat_tebar,
    dosis,
    createdAt,
    updatedAt
)
VALUES(?,?,?,?,?,?,?);


addFeedCalcShed:
INSERT OR REPLACE INTO feedCalcSched(
    id,
    day,
    pakan_harian,
    penyerapan,
    berat_akhir,
    feedCalcId
)
VALUES (?,?,?,?,?,?);

selectAllFeedCalcs:
SELECT *
FROM feedCalcs;

deleteFeedCalcById:
DELETE FROM feedCalcs
WHERE id = ?;

deleteAllFeedCalcs:
DELETE FROM feedCalcs;

deleteAllFeedCalcSched:
DELETE FROM feedCalcSched;

selectAccToken:
SELECT accessToken
FROM userTable;

selectName:
SELECT name
FROM userTable;


selectAll:
